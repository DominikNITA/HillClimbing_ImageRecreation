@inject IWebHostEnvironment Environment

<Button @onclick=@ClearData>Clear data</Button>

@code {
    void ClearData()
    {
        var directoryToClear = new DirectoryInfo(StorageHelper.GlobalFolderPath);

        foreach (FileInfo file in directoryToClear.GetFiles())
        {
            file.Delete(); 
        }
        foreach (DirectoryInfo dir in directoryToClear.GetDirectories())
        {
            dir.Delete(true); 
        }
        string directoryToCreate = StorageHelper.UnsafeUploadsPath;
        System.Console.WriteLine(directoryToCreate);
        Directory.CreateDirectory(StorageHelper.UnsafeUploadsPath);
    }
}
